{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "preserveConstEnums": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react-jsx", // Causes inline XML (JSX code) to be expanded
        "strict": true,
        "types": ["node", "react"],
        "skipLibCheck": true,
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
    ],
    "exclude": [
        "node_modules",
        "out",
    ]
}